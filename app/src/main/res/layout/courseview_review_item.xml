<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/partner_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="6dip"
        android:src="@drawable/logo"
        app:civ_border_color="@color/colorFacebook"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/partner_email"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/partner_img"
        android:fontFamily="@font/arima_madurai_bold"
        android:singleLine="true"
        android:text="Description"
        android:textColor="@color/grey_60"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_review"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:fontFamily="@font/arima_madurai_bold"
        android:layout_above="@id/partner_email"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/partner_img"
        android:gravity="center_vertical"
        android:text="Example application"
        android:textColor="@color/grey_60"
        android:textSize="16sp" />

</RelativeLayout>