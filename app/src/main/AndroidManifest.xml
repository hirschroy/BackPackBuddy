<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coursefreak.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name="com.coursefreak.app.LoginPage" />
        <activity android:name="com.coursefreak.app.SignupPage" />
        <activity
            android:name="com.coursefreak.app.Courses"
            android:label="@string/title_activity_courses"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.coursefreak.app.CourseView"
            android:exported="true"
            android:label="@string/title_activity_courseview"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.coursefreak.app.PartnerView"
            android:exported="true"
            android:label="@string/title_activity_partner_view"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="com.coursefreak.app.UGView"
            android:label="@string/title_activity_ugview" />
        <activity
            android:name="com.coursefreak.app.TabsCoursesActivity"
            android:exported="true" />
        <activity
            android:name="com.coursefreak.app.WalkthroughActivity"
            android:exported="true" />
        <activity
            android:name="com.coursefreak.app.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.coursefreak.app.AboutActivity"
            android:exported="true" />
        <activity android:name="com.coursefreak.app.CourseDataActivity"
            android:exported="true"
            ></activity>
        <activity android:name="com.coursefreak.app.ReviewsActivity"
            android:exported="true"
            ></activity>
    </application>

</manifest>